<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- 顶部工具栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="@string/database_demo_title"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 输入区域 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="@string/hint_database_name"
                app:startIconDrawable="@drawable/ic_database">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_database_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="game_save_demo" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="@string/hint_password"
                app:startIconDrawable="@drawable/ic_lock"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="123456" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_table_name"
                app:startIconDrawable="@drawable/ic_table">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_table_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="player_data" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- 操作按钮区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_create_database"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="@string/btn_create_database"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/success_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_create_table"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="@string/btn_create_table"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/info_color" />

            </LinearLayout>

            <!-- 第二行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_insert_data"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="@string/btn_insert_data"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/warning_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_query_data"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="@string/btn_query_data"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/primary_color" />

            </LinearLayout>

            <!-- 第三行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_update_data"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="@string/btn_update_data"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/accent_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_data"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="@string/btn_delete_data"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/error_color" />

            </LinearLayout>

            <!-- 第四行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_export_json"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="@string/btn_export_json"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/secondary_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_import_json"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="@string/btn_import_json"
                    android:textSize="12sp"
                    app:cornerRadius="6dp"
                    app:backgroundTint="@color/tertiary_color" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 日志区域 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 日志标题栏 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@color/primary_color">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/log_title"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear_log"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/btn_clear_log"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="4dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/primary_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_copy_log"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/btn_copy_log"
                    android:textSize="10sp"
                    app:cornerRadius="4dp"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/primary_color" />

            </LinearLayout>

            <!-- 日志内容 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="等待操作..."
                    android:textSize="12sp"
                    android:textColor="@color/primary_text_color"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="2dp" />

            </ScrollView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
